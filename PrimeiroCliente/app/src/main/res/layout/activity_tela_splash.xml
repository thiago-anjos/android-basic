<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaSplashActivity">

    <ImageView
        android:id="@+id/logoPrimeiroCliente"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:contentDescription="LogoMarca"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo_tarefa"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/boasVindasCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/splash_bem_vindo"
        android:textSize="@dimen/font_size"
        android:textColor="@color/clientColor"
        />
</androidx.appcompat.widget.LinearLayoutCompat>